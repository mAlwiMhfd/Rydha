<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rydha.id.rydha">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Home"
        android:allowBackup="true"
        android:icon="@drawable/rydha"
        android:label="@string/app_name"
        android:roundIcon="@drawable/rydha"
        android:supportsRtl="true">
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.DonasiActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.ProgramActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.KonfirmasiActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.DetailActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.ZakatActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.ContactActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>